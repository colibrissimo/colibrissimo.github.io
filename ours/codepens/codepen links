            <div class="click-counter" id="clickCounter">
                Existential uncertainty level: <span id="clickCount">42</span>%
            </div>
        </div>
    </div>

    <script>
        let clicks = 42;
        
        function incrementClicks() {
            clicks++;
            const counter = document.getElementById('clickCount');
            const counterDiv = document.getElementById('clickCounter');
            
            counter.textContent = clicks;
            counterDiv.classList.add('active');
            
            setTimeout(() => {
                counterDiv.classList.remove('active');
            }, 300);

            // Easter egg at 100
            if (clicks === 100) {
                const card = document.querySelector('.business-card');
                const originalBg = card.style.background;
                card.style.background = 'linear-gradient(135deg, #f97316 0%, #0891b2 100%)';
                setTimeout(() => {
                    card.style.background = originalBg;
                }, 1000);
            }

            // Message at various milestones
            if (clicks === 84) {
                alert('Double the meaning of life achieved! ðŸŽ‰');
            }
        }

        // Prevent text selection for cleaner interaction
        document.querySelector('.business-card').addEventListener('selectstart', (e) => {
            e.preventDefault();
        });
    </script>
